<Project Sdk="Microsoft.NET.Sdk.Web">
    <PropertyGroup>
        <TargetFrameworks>net5.0;net6.0</TargetFrameworks>
        <PackageVersion>6.0.0</PackageVersion>
        <Authors>ch1seL</Authors>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Description>Easy way to render Razor View as string</Description>
        <Copyright>ch1seL Â© 2021</Copyright>
        <PackageTags>Razor AspNetCore String</PackageTags>
        <PackageId>ch1seL.RazorViewRender</PackageId>
        <PackageProjectUrl>https://github.com/ch1seL/RazorViewRenderService</PackageProjectUrl>
        <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
        <RepositoryUrl>https://github.com/ch1seL/RazorViewRenderService</RepositoryUrl>
        <AssemblyName>ch1seL.RazorViewRender</AssemblyName>
        <RootNamespace>ch1seL.RazorViewRender</RootNamespace>
        <IsPackable>true</IsPackable>
        <OutputType>Library</OutputType>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="$(PackageLicenseFile)" Pack="true" Visible="true" PackagePath="" />
    </ItemGroup>
</Project>
